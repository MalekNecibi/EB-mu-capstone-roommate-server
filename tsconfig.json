{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "ES2022",
        "target": "ES2022",
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.js"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "files": true
        // "swc": true,
    }
}
