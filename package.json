{
    "name": "mu-capstone-server",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "mac:mongod-start": "mongod --config \"$(brew --prefix)/etc/mongod.conf\" &",
        "mac:mongod-kill": "pkill mongod",
        "mac:mongo-reset": "echo 'db.users.deleteMany({})' | mongosh --quiet bunkiez && mongoimport --jsonArray -d bunkiez -c users users.json",
        "build": "npx tsc",
        "dev": "nodemon --watch 'src/**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts"
    },
    "dependencies": {
        "@types/express": "^4.17.14",
        "bcrypt": "^5.1.0",
        "express": "^4.18.2",
        "express-validator": "^6.14.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.7.0",
        "socket.io": "^4.5.3"
    },
    "devDependencies": {
        "@tsconfig/node18": "^1.0.1",
        "@types/bcrypt": "^5.0.0",
        "@types/jsonwebtoken": "^8.5.9",
        "concurrently": "^7.5.0",
        "nodemon": "^2.0.20",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
